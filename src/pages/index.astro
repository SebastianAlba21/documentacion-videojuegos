---
import Members from '../components/Members.astro'
import Welcome from '../components/Welcome.astro'
import Unity from '../components/Unity.astro'
import Metaquest from '../components/Metaquest.astro'
import Layout from '../layouts/Layout.astro'
---

<Layout title="DocumentaciÃ³n de POG.">
	<main>
		<div>
			<Welcome />
			<Unity />
			<Metaquest />
			<Members />
		</div>
	</main>
</Layout>

<style>
	main {
		display: flex;
		justify-content: center;
		align-items: center;
		padding-top: 3rem;
		padding-bottom: 3rem;
		padding-left: 7rem;
		padding-right: 7rem;
		gap: 2rem;
		text-align: justify;
	}
	p {
		font-size: 1.2rem;
	}
	div {
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
		width: 70%;
	}
	img {
		max-width: 50%;
		border-radius: 8px;
		height: auto;
		box-shadow: 0 4px 8px rgba(0, 0, 0, 0.5);
	}
	@media screen and (max-width: 1024px) {
		main {
			flex-direction: column;
			padding-left: 5rem;
			padding-right: 5rem;
		}
		div {
			max-width: 80%;
		}
	}
	@media screen and (max-width: 600px) {
		main {
			padding-left: 3rem;
			padding-right: 3rem;
		}
		div {
			max-width: 100%;
		}
	}
</style>
